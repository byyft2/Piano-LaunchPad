<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play_beat_setting"
    android:orientation="vertical">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/sound_select_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/beatmakertop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/beatmaker_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_1row_style"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <Button
                    android:id="@+id/beatmaker_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_2row_style"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <Button
                    android:id="@+id/beatmaker_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_3row_style"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <Button
                    android:id="@+id/beatmaker_btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_4row_style"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <Button
                    android:id="@+id/beatmaker_btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_5row_style"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />
            </LinearLayout>


            <FrameLayout
                android:id="@+id/beatmaker_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beatmakertop"
                android:layout_marginTop="40dp"
                android:layout_weight="4">

                <include
                    android:id="@+id/main_beatmaker_green"
                    layout="@layout/activity_play_beat_green" />

                <include
                    android:id="@+id/main_beatmaker_indogo"
                    layout="@layout/activity_play_beat_indigo" />

                <include
                    android:id="@+id/main_beatmaker_orange"
                    layout="@layout/activity_play_beat_orange" />

                <include
                    android:id="@+id/main_beatmaker_yellow"
                    layout="@layout/activity_play_beat_yellow" />

                <GridLayout
                    android:id="@+id/beatmaker_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/blue_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="1"
                        android:textOff="선택"
                        android:textOn="선택" />

                    <Button
                        android:id="@+id/blue_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="2" />

                    <Button
                        android:id="@+id/blue_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="3" />

                    <Button
                        android:id="@+id/blue_btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="4" />

                    <Button
                        android:id="@+id/blue_btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="5" />

                    <Button
                        android:id="@+id/blue_btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="6" />

                    <Button
                        android:id="@+id/blue_btn7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="7" />

                    <Button
                        android:id="@+id/blue_btn8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="8" />

                    <Button
                        android:id="@+id/blue_btn9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="9" />

                    <Button
                        android:id="@+id/blue_btn10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="10" />

                    <Button
                        android:id="@+id/blue_btn11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="11" />

                    <Button
                        android:id="@+id/blue_btn12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="12" />

                    <Button
                        android:id="@+id/blue_btn13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="13" />

                    <Button
                        android:id="@+id/blue_btn14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="14" />

                    <Button
                        android:id="@+id/blue_btn15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="15" />

                    <Button
                        android:id="@+id/blue_btn16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_rowWeight="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/button_1row_style"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:tag="16" />

                </GridLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beatmaker_frame"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="넣으실 버튼을 클릭해주세요"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/original_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/btn_insert"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="25dp"
                            android:text="버튼에 넣기" />

                        <Button
                            android:id="@+id/btn_complete"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:text="완료"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/green_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/go_record_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_marginTop="25dp"
                                android:layout_weight="1"
                                android:text="녹음하기" />

                            <Button
                                android:id="@+id/go_load_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                android:layout_marginTop="25dp"
                                android:layout_weight="1"
                                android:text="불러오기" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/go_F5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="새로고침" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/insert_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="넣을 버튼을 클릭 후, \n넣기 버튼을 클릭"
                    android:textSize="30dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="1"
                android:stretchColumns="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/beat_1row_1button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="1" />

                    <Button
                        android:id="@+id/beat_1row_2button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="2" />

                    <Button
                        android:id="@+id/beat_1row_3button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="3" />

                    <Button
                        android:id="@+id/beat_1row_4button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="4" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/beat_2row_1button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="5" />

                    <Button
                        android:id="@+id/beat_2row_2button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="6" />

                    <Button
                        android:id="@+id/beat_2row_3button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="7" />

                    <Button
                        android:id="@+id/beat_2row_4button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/beat_3row_1button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="9" />

                    <Button
                        android:id="@+id/beat_3row_2button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="10" />

                    <Button
                        android:id="@+id/beat_3row_3button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="11" />

                    <Button
                        android:id="@+id/beat_3row_4button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/beat_4row_1button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="13" />

                    <Button
                        android:id="@+id/beat_4row_2button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="14" />

                    <Button
                        android:id="@+id/beat_4row_3button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="15" />

                    <Button
                        android:id="@+id/beat_4row_4button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/no_select_style_blue"
                        android:tag="16" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <Button
                    android:id="@+id/play_beat_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="뒤로가기" />

                <Button
                    android:id="@+id/play_beat_setting_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="넣기" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
