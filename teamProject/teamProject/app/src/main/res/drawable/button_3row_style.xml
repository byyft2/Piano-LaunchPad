<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false"> //이거는 버튼을 안눌럿을때 색
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:top="0dp">
                <shape>
                    <corners android:radius="0dp" />
                    <solid android:color="#00FFFEFE" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#FF9800" />
                    <stroke android:width="5dp" android:color="#252323" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true"> //버튼을 눌럿을때 색
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:top="0dp">
                <shape>
                    <corners android:radius="0dp" />
                    <solid android:color="#00FFFEFE" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="0dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#C97903" />
                    <stroke android:width="5dp" android:color="#252323" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>