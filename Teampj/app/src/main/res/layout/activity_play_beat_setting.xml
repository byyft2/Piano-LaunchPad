<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play_beat_setting"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/beatmakertop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/beatmaker_btn1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00BFFF"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Button"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/beatmaker_btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFF00"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Button" />

        <Button
            android:id="@+id/beatmaker_btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF8000"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Button" />

        <Button
            android:id="@+id/beatmaker_btn4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4000FF"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Button" />

        <Button
            android:id="@+id/beatmaker_btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff00"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Button" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/beatmaker_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beatmakertop"
        android:layout_marginTop="40dp"
        android:layout_weight="4"
        >
        <include
            android:id="@+id/main_beatmaker_green"
            layout="@layout/activity_play_beat_green"/>
        <include
            android:id="@+id/main_beatmaker_indogo"
            layout="@layout/activity_play_beat_indigo"/>
        <include
            android:id="@+id/main_beatmaker_orange"
            layout="@layout/activity_play_beat_orange"/>
        <include
            android:id="@+id/main_beatmaker_yellow"
            layout="@layout/activity_play_beat_yellow" />

        <GridLayout
            android:id="@+id/beatmaker_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/blue_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="1"
                android:textOff="선택"
                android:textOn="선택"
                />

            <Button
                android:id="@+id/blue_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="2"
                />

            <Button
                android:id="@+id/blue_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="3"
                />

            <Button
                android:id="@+id/blue_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="4"
                />

            <Button
                android:id="@+id/blue_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="5"
                />

            <Button
                android:id="@+id/blue_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="6"
                />

            <Button
                android:id="@+id/blue_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="7"
                />

            <Button
                android:id="@+id/blue_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="8"
                />

            <Button
                android:id="@+id/blue_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="9"
                />

            <Button
                android:id="@+id/blue_btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="10"
                />

            <Button
                android:id="@+id/blue_btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="11"
                />

            <Button
                android:id="@+id/blue_btn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="12"
                />

            <Button
                android:id="@+id/blue_btn13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="13"
                />

            <Button
                android:id="@+id/blue_btn14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="14"
                />

            <Button
                android:id="@+id/blue_btn15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="15"
                />

            <Button
                android:id="@+id/blue_btn16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#00BFFF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Button"
                android:tag="16"
                />

        </GridLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/beatmaker_frame"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="넣으실 버튼을 클릭해주세요" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/original_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_insert"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:text="버튼에 넣기" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/green_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <Button
                    android:id="@+id/go_record_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="녹음하기" />

                <Button
                    android:id="@+id/go_load_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="불러오기" />
            </LinearLayout>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>